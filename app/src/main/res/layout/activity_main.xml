<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.musicapp.MainActivity">

    <TextView
        android:id="@+id/info"
        style="@style/CategoryStyle"
        android:layout_weight="1.0"
        android:background="@color/infoheader_color"
        android:gravity="center"
        android:text="@string/App_InfoHeader"
        android:textColor="@color/infoheader_text_color" />

    <TextView
        android:id="@+id/songs"
        style="@style/CategoryStyle"
        android:layout_weight="1.0"
        android:background="@color/category_songs"
        android:gravity="center"
        android:text="@string/Songs_Category" />

    <TextView
        android:id="@+id/albums"
        style="@style/CategoryStyle"
        android:layout_weight="1.0"
        android:background="@color/category_albums"
        android:gravity="center"
        android:text="@string/Albums_Category" />

    <TextView
        android:id="@+id/artists"
        style="@style/CategoryStyle"
        android:layout_weight="1.0"
        android:background="@color/category_artists"
        android:gravity="center"
        android:text="@string/Artists_Category" />

</LinearLayout>
